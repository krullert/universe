                    </exclusion>
                </exclusions>
            </dependency>

            <!-- end of uom -->

            <!-- test -->

            <!-- https://mvnrepository.com/artifact/junit/junit -->
            <!-- http://www.eclipse.org/legal/epl-v10.html -->
            <!-- License EPL 1.0 -->
            <!-- https://www.tldrlegal.com/l/epl -->
